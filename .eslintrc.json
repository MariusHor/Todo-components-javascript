{
  "extends": ["eslint:recommended", "plugin:import/errors", "plugin:jsx-a11y/recommended", "prettier"],
  "rules": {},
  "plugins": ["import", "jsx-a11y", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["src", "./src"],
          ["actions", "./src/actions"],
          ["lib", "./src/lib"],
          ["store", "./src/store"],
          ["utils", "./src/utils"]
        ]
      },
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}
